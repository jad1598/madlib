<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScaryStory"
    android:background="#E1E9FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scary_story_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#5D88FF"
            android:text="@string/scary_story"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/SS_editText1"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="24dp"
                    android:ems="10"
                    android:hint="Enter Adjective"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/SS_editText2"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter A Person's Name "
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/SS_editText3"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter Adjective"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/SS_editText4"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter Noun"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/SS_editText5"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter Verb"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/SS_editText6"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter Animal Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/SS_editText7"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter Verb Ending in 'ing'"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/SS_editText8"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter Adverb"
                    android:inputType="textPersonName" />


                <EditText
                    android:id="@+id/SS_editText9"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter Noun"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/SS_editText10"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter Verb Ending in 'ing'"
                    android:inputType="textPersonName"
                    />

                <EditText
                    android:id="@+id/SS_editText11"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter Plural Noun"
                    android:inputType="textPersonName"
                    />

                <EditText
                    android:id="@+id/SS_editText12"
                    android:layout_width="330dp"
                    android:layout_height="67dp"
                    android:ems="10"
                    android:hint="Enter Verb Ending in 'ing'"
                    android:inputType="textPersonName"
                    />

                <Button
                    android:id="@+id/SS_submit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="submit"
                    android:text="@string/submit" />

                <TextView
                    android:id="@+id/scary_madlib_label"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>